<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="wa_message_tree_view" model="ir.ui.view">
    <field name="name">wa.message.tree.view</field>
    <field name="model">wa.message</field>
    <field name="arch" type="xml">
      <list string="WhatsApp Messages">
        <field name="create_date"/>
        <field name="create_uid"/>
        <field name="dialog_message_id"/>
        <field name="res_model"/>
        <field name="res_id"/>
        <field name="status"/>
        <field name="json_response"/>
      </list>
    </field>
  </record>

  <record id="wa_message_form_view" model="ir.ui.view">
    <field name="name">wa.message.form.view</field>
    <field name="model">wa.message</field>
    <field name="arch" type="xml">
      <form string="WhatsApp Message">
        <sheet>
          <group>
            <field name="res_model"/>
            <field name="res_id"/>
            <field name="status"/>
            <field name="json_response"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_wa_messages" model="ir.actions.act_window">
    <field name="name">WhatsApp Messages</field>
    <field name="res_model">wa.message</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_whatsapp_root" name="WhatsApp"/>
  <menuitem id="menu_whatsapp_messages" name="Messages"
            parent="menu_whatsapp_root" action="action_wa_messages"/>
</odoo>
